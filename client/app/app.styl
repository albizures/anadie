@import "../bower_components/bootstrap/dist/css/bootstrap.css"
@import "../bower_components/angularjs-toaster/toaster.css"


[ng-click],
[data-ng-click],
[x-ng-click]
  cursor pointer

.load
  transform-origin 50%
.load.active
  animation load infinite 1s

@keyframes load
  0%
    transform  rotate(0deg)
  100%
    transform  rotate(360deg)


html
  margin 0
  padding 0
body
  background #e6e6e6
  header, .main, footer
    margin 20px 20px
  .main
    min-height 300px;
    .articles
      width 100%
      margin-right 1.5%
      float left
      article
        padding 20px
        background #fff
        margin-bottom 20px
  article
    padding 20px
    background #fff
    margin-bottom 20px
  footer
    background #000
    color #fff
    clear both
    padding  10px 0px
    text-align  center

  .modal-backdrop {
    height: 100%;
  }
.fecha
  select
    float left
    display inline-block
    vertical-align top
    width 30%
    &:nth-child(2)
      width 40%
