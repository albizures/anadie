

table.table
  margin-top 20px
  border-radius: 3px;
  tr
    border-bottom: 2px solid #DDDDDD;
    background white;
    transform-origin 0
    transition: 0.1s linear all;
    th
      text-align center
    &.ng-enter {
      opacity 0
      transform scale(1,0)
    }
    &.ng-enter.ng-enter-active {
      opacity 1
      transform scale(1)
    }
    &.ng-enter-stagger ,&.ng-leave-stagger {
      transition-delay: 0.1s;
      animation-delay: 0.1s;
    }
    &.ng-leave {
      opacity 1
      transform scale(1)
    }
    &.ng-leave.ng-leave-active {
      opacity 0
      transform scale(1,0)
    }
