@import "../bower_components/bootstrap/dist/css/bootstrap.css"
@import "../bower_components/angularjs-toaster/toaster.css"


[ng-click],
[data-ng-click],
[x-ng-click]
  cursor pointer


body
  background #e6e6e6
  header, .main, footer
    width 90%
    max-width 1000px
    margin 20px auto
  .main
    .articles
      width 68.5%
      margin-right 1.5%
      float left
      article
        padding 20px
        background #fff
        margin-bottom 20px
  article
    padding 20px
    background #fff
    margin-bottom 20px
  footer
    background #000
    color #fff
    clear both
    padding  10px 0px
    text-align  center

